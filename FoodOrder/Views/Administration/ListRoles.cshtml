@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<h2>All Roles</h2>
<div class="row">
    <div class="col-md-8">
        @if (Model.Any())
        {
            <p>
                <a asp-action="CreateRole">New role</a>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => role.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => role.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditRole", new { id = role.Id }) |
                                @Html.ActionLink("Delete", "DeleteRole", new { id = role.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="administration" asp-action="CreateRole">
                        Create Role
                    </a>
                </div>
            </div>
        }
    </div>
</div>