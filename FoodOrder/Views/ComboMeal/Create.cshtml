@model FoodOrder.Models.ViewModels.ComboProductsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Combo Meal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComboMeal.Name" class="control-label"></label>
                <input asp-for="ComboMeal.Name" class="form-control" />
                <span asp-validation-for="ComboMeal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComboMeal.Description" class="control-label"></label>
                <input asp-for="ComboMeal.Description" class="form-control" />
                <span asp-validation-for="ComboMeal.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComboMeal.Price" class="control-label"></label>
                <input asp-for="ComboMeal.Price" class="form-control" />
                <span asp-validation-for="ComboMeal.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductItemIds" class="control-label">Product Items</label>
                <select asp-for="ProductItemIds" asp-items="@(new SelectList(Model.ProductItems,"Id","Name"))" class="form-control" multiple>
                    <option>Please select Product Items</option>
                </select>
                <span asp-validation-for="ProductItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

