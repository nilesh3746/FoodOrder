@model FoodOrder.Models.ViewModels.CombosViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CombosViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ComboMeal.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComboMeal.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ComboMeal.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComboMeal.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ComboMeal.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComboMeal.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Product Items")
        </dt>
        <dd class="col-sm-10">
            @foreach (var productItem in Model.ComboProducts)
            {
                <ul>
                    <li>
                        @productItem.ProductItem.Name
                    </li>
                </ul>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
